# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,html,php}]
indent_size = 4

[*.{js,json,es6,jsx,ts,tsx,css,less,sass,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.yml]
indent_size = 2
indent_style = space
